{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"module": "commonjs",
		"target": "es5",
		"lib": ["es6"],
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true
	},
	"exclude": [
		"coverage",
		"dist",
		"node_modules"
	]
}
