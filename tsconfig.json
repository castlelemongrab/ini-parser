{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"module": "commonjs",
		"target": "es2017",
		"lib": ["es2017"],
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "src/**/*.test.ts"]
}
